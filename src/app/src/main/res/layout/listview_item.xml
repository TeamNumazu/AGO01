<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:tag="Bottom2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/edit"
            android:src="@mipmap/ic_create"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#76d275"
            android:paddingLeft="21dp"
            android:paddingRight="21dp" />
        <ImageView
            android:id="@+id/trash"
            android:src="@mipmap/ic_delete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#d50000"
            android:padding="21dp"
            android:paddingRight="21dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/position_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:text="item_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/position_quantity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="個数: "
                android:visibility="invisible"
                android:layout_alignBaseline="@+id/position_quantity"
                android:layout_alignBottom="@+id/position_quantity"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/position_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/position_expire"
                android:layout_alignBottom="@+id/position_expire"
                android:layout_toEndOf="@+id/position_quantity_title"
                android:layout_toRightOf="@+id/position_quantity_title"
                android:text="quantity"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/position_expire_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="まで"
                android:textSize="8sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/position_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expire"
                android:layout_marginRight="3dp"
                android:layout_alignBaseline="@+id/position_expire_title"
                android:layout_alignBottom="@+id/position_expire_title"
                android:layout_toLeftOf="@+id/position_expire_title"
                android:layout_toStartOf="@+id/position_expire_title" />

            <TextView
                android:id="@+id/position_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="XX"
                android:textColor="#9fa8da" />

            <TextView
                android:id="@+id/position_open_passed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#3949AB"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/position_NICHI"
                android:layout_toStartOf="@+id/position_NICHI" />

            <TextView
                android:id="@+id/position_NICHI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="日"
                android:textStyle="bold"
                android:textColor="#3949AB"
                android:layout_alignBaseline="@+id/position_keika"
                android:layout_alignBottom="@+id/position_keika"
                android:layout_toLeftOf="@+id/position_keika"
                android:layout_toStartOf="@+id/position_keika" />

            <TextView
                android:id="@+id/position_keika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="経過"
                android:layout_alignBottom="@+id/position_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>